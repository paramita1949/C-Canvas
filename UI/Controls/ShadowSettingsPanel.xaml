<UserControl x:Class="ImageColorChanger.UI.Controls.ShadowSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="280" Background="White">

    <Border BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" CornerRadius="8,0,0,8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,20,20,20">

                <!-- 标题 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Width="24" Height="24"
                            Background="#9E9E9E"
                            CornerRadius="4" Margin="0,0,8,0"/>
                    <TextBlock Text="文字阴影"
                               Foreground="#333333"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 阴影类型选择 -->
                <TextBlock Text="阴影类型"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <UniformGrid Columns="3" Margin="0,0,0,15">
                    <Button x:Name="BtnDropShadow" Content="外部" Height="28"
                            Background="White" Foreground="#333333" BorderBrush="#DDDDDD"
                            Margin="0,0,3,0" Click="BtnDropShadow_Click"/>
                    <Button x:Name="BtnInnerShadow" Content="内部" Height="28"
                            Background="White" Foreground="#333333" BorderBrush="#DDDDDD"
                            Margin="2,0,2,0" Click="BtnInnerShadow_Click"/>
                    <Button x:Name="BtnPerspectiveShadow" Content="透视" Height="28"
                            Background="White" Foreground="#333333" BorderBrush="#DDDDDD"
                            Margin="3,0,0,0" Click="BtnPerspectiveShadow_Click"/>
                </UniformGrid>

                <!-- 预设方案 -->
                <TextBlock x:Name="PresetTitle" Text="预设方案"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"
                           Visibility="Collapsed"/>

                <StackPanel x:Name="PresetPanel" Margin="0,0,0,15">
                    <!-- 预设按钮将动态生成 -->
                </StackPanel>

                <!-- 常用颜色 -->
                <TextBlock Text="常用颜色"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <!-- 色板网格 6x4 -->
                <UniformGrid x:Name="ColorGrid"
                             Columns="6"
                             Rows="4"
                             Margin="0,0,0,12">
                    <!-- 颜色按钮将在代码中动态生成 -->
                </UniformGrid>

                <!-- 无颜色 + 更多颜色按钮 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <!-- 无颜色按钮 -->
                    <Button x:Name="BtnNoColor"
                            Width="40" Height="40"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Margin="0,0,8,0"
                            Padding="0"
                            Cursor="Hand"
                            Click="BtnNoColor_Click">
                        <Grid Width="32" Height="32">
                            <Border BorderBrush="#999999" BorderThickness="1" Background="White"/>
                            <Line X1="0" Y1="32" X2="32" Y2="0"
                                  Stroke="#E53935"
                                  StrokeThickness="2.5"/>
                        </Grid>
                    </Button>

                    <!-- 更多颜色按钮 -->
                    <Button x:Name="BtnMoreColors"
                            Width="40" Height="40"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Padding="0"
                            Cursor="Hand"
                            Click="BtnMoreColors_Click">
                        <Grid Width="32" Height="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Rectangle Grid.Column="0" Fill="#E53935"/>
                            <Rectangle Grid.Column="1" Fill="#00BCD4"/>
                            <Rectangle Grid.Column="2" Fill="#E91E63"/>
                            <Rectangle Grid.Column="3" Fill="#9C27B0"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- 参数调整区域 -->
                <StackPanel x:Name="ParametersPanel" Visibility="Collapsed">

                    <!-- 距离 -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="距离"
                                   Foreground="#666666" FontSize="12"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1">
                            <Slider x:Name="DistanceSlider"
                                    Minimum="0" Maximum="30" Value="8"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    ValueChanged="DistanceSlider_ValueChanged"/>
                            <TextBlock x:Name="TxtDistanceValue" Text="8 px"
                                       Foreground="#999999" FontSize="11"
                                       HorizontalAlignment="Right"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 模糊 -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="模糊"
                                   Foreground="#666666" FontSize="12"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1">
                            <Slider x:Name="BlurSlider"
                                    Minimum="0" Maximum="40" Value="12"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    ValueChanged="BlurSlider_ValueChanged"/>
                            <TextBlock x:Name="TxtBlurValue" Text="12 px"
                                       Foreground="#999999" FontSize="11"
                                       HorizontalAlignment="Right"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 透明度 -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="透明度"
                                   Foreground="#666666" FontSize="12"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1">
                            <Slider x:Name="OpacitySlider"
                                    Minimum="0" Maximum="100" Value="80"
                                    TickFrequency="5" IsSnapToTickEnabled="True"
                                    ValueChanged="OpacitySlider_ValueChanged"/>
                            <TextBlock x:Name="TxtOpacityValue" Text="80%"
                                       Foreground="#999999" FontSize="11"
                                       HorizontalAlignment="Right"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>


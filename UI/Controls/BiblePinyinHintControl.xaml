<UserControl x:Class="ImageColorChanger.UI.Controls.BiblePinyinHintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="500"
             Visibility="Collapsed">
    <Border Background="#DD000000"
            BorderBrush="#FF5722"
            BorderThickness="2"
            CornerRadius="8"
            Padding="20">
        <StackPanel>
            <!-- 输入显示 -->
            <TextBlock x:Name="InputText" 
                       Text="" 
                       Foreground="#FFD700" 
                       FontSize="20" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <!-- 匹配结果（横向排列书卷名） -->
            <WrapPanel x:Name="MatchResultsPanel"
                       Orientation="Horizontal"
                       Visibility="Collapsed"
                       Margin="0,10,0,0">
                <!-- 动态添加书卷名TextBlock -->
            </WrapPanel>
        </StackPanel>
    </Border>
</UserControl>


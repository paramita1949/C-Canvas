<UserControl x:Class="ImageColorChanger.UI.Controls.SpacingSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Background="White">

    <Border BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" CornerRadius="8,0,0,8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,20,20,20">

                <!-- 标题 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="↔"
                               Foreground="#2196F3"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="文字行间距"
                               Foreground="#333333"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 1. 行间距离 -->
                <TextBlock Text="1. 行间距离"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <UniformGrid x:Name="LineSpacingGrid"
                             Columns="4"
                             Rows="4"
                             Margin="0,0,0,20">
                    <!-- 行间距按钮将在代码中动态生成 -->
                </UniformGrid>

                <!-- 2. 字间距离 -->
                <TextBlock Text="2. 字间距离"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <UniformGrid x:Name="LetterSpacingGrid"
                             Columns="4"
                             Rows="5"
                             Margin="0,0,0,20">
                    <!-- 字间距按钮将在代码中动态生成 -->
                </UniformGrid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>


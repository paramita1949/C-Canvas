<UserControl x:Class="ImageColorChanger.UI.Controls.BorderSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="280" Background="White">

    <Border BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" CornerRadius="8,0,0,8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,20,20,20">

                <!-- 标题 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Width="24" Height="24"
                            BorderBrush="#333333" BorderThickness="2"
                            CornerRadius="4" Margin="0,0,8,0"/>
                    <TextBlock Text="边框样式"
                               Foreground="#333333"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 常用颜色 -->
                <TextBlock Text="常用颜色"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <!-- 色板网格 6x4 -->
                <UniformGrid x:Name="ColorGrid"
                             Columns="6"
                             Rows="4"
                             Margin="0,0,0,12">
                    <!-- 颜色按钮将在代码中动态生成 -->
                </UniformGrid>

                <!-- 无颜色 + 自定义色盘按钮 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <!-- 无颜色按钮：白色方框 + 红色斜杠 -->
                    <Button x:Name="BtnNoColor"
                            Width="40" Height="40"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Margin="0,0,8,0"
                            Padding="0"
                            Cursor="Hand"
                            Click="BtnNoColor_Click">
                        <Grid Width="32" Height="32">
                            <Border BorderBrush="#999999" BorderThickness="1" Background="White"/>
                            <Line X1="0" Y1="32" X2="32" Y2="0"
                                  Stroke="#E53935"
                                  StrokeThickness="2.5"/>
                        </Grid>
                    </Button>

                    <!-- 自定义色盘按钮：彩色竖条 -->
                    <Button x:Name="BtnCustomColor"
                            Width="40" Height="40"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Padding="0"
                            Cursor="Hand"
                            Click="BtnCustomColor_Click">
                        <Grid Width="32" Height="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Rectangle Grid.Column="0" Fill="#E53935"/>
                            <Rectangle Grid.Column="1" Fill="#00BCD4"/>
                            <Rectangle Grid.Column="2" Fill="#E91E63"/>
                            <Rectangle Grid.Column="3" Fill="#9C27B0"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- 使用 RGB 值 -->
                <TextBlock Text="使用 RGB 值（可输入）"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TxtRgbInput"
                             Grid.Column="0"
                             Height="32"
                             Background="White"
                             Foreground="#333333"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Padding="8,0"
                             VerticalContentAlignment="Center"
                             Text="#FFFFFF"/>

                    <Button Grid.Column="2"
                            Content="应用"
                            Height="32"
                            Background="#7C4DFF"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnUseRgb_Click"/>
                </Grid>

                <!-- 最近使用 -->
                <TextBlock Text="最近使用"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <UniformGrid x:Name="RecentColorsGrid"
                             Columns="6"
                             Rows="1"
                             Margin="0,0,0,20">
                    <!-- 最近颜色将在代码中动态生成 -->
                </UniformGrid>

                <!-- 宽度滑块 -->
                <TextBlock x:Name="TxtWidthLabel"
                           Text="宽度 2 px"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <Slider x:Name="WidthSlider"
                        Minimum="0" Maximum="20" Value="2"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Margin="0,0,0,20"
                        ValueChanged="WidthSlider_ValueChanged"/>

                <!-- 圆角滑块 -->
                <TextBlock x:Name="TxtCornerRadiusLabel"
                           Text="圆角 0 px"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <Slider x:Name="CornerRadiusSlider"
                        Minimum="0" Maximum="100" Value="0"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Margin="0,0,0,20"
                        ValueChanged="CornerRadiusSlider_ValueChanged"/>

                <!-- 不透明度滑块 -->
                <TextBlock x:Name="TxtOpacityLabel"
                           Text="不透明度 0% （无边框）"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <Slider x:Name="OpacitySlider"
                        Minimum="0" Maximum="100" Value="0"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Margin="0,0,0,20"
                        ValueChanged="OpacitySlider_ValueChanged"/>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>


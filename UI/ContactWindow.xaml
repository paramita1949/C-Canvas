<Window x:Class="ImageColorChanger.UI.ContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wechat" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Microsoft YaHei UI"
        ResizeMode="CanResize"
        Icon="/baodian.ico">

    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="6" Opacity="0.15" Color="#000000"/>
                            </Border.Effect>
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Opacity="0.25" Color="#2196F3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="Selected">
                                <Setter TargetName="border" Property="Background" Value="#2196F3"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="10" Opacity="0.3" Color="#2196F3"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 标题栏 -->
            <RowDefinition Height="*"/>
            <!-- 内容区 -->
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Color="#000000"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="WeChat" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="感谢您使用 Canvas Cast，欢迎联系交流或赞助支持" 
                           FontSize="13" 
                           Foreground="#E3F2FD"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- 内容区 - 两张图片并排 -->
        <Grid Grid.Row="1" Background="White" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：微信联系 -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📱 微信联系" 
                           FontSize="18" 
                           FontWeight="Medium"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.15" Color="#000000"/>
                    </Border.Effect>
                    <Image Source="/weixin.png" 
                           Stretch="None"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                </Border>
                
                <TextBlock Text="扫描二维码添加微信交流" 
                           FontSize="13" 
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
            </StackPanel>

            <!-- 右侧：赞助支持 -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="💝 赞助支持" 
                           FontSize="18" 
                           FontWeight="Medium"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.15" Color="#000000"/>
                    </Border.Effect>
                    <Image Source="/pay.png" 
                           Stretch="None"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"/>
                </Border>
                
                <TextBlock FontSize="13" 
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,15,0,0">
                    <Run Text="您的支持是我不断更新的动力"/>
                    <LineBreak/>
                    <Run Text="扫描二维码即可赞助"/>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>


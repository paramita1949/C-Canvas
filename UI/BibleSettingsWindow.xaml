<Window x:Class="ImageColorChanger.UI.BibleSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="圣经设置" 
        Height="267" 
        Width="320"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="#3C3C3C"
        Deactivated="Window_Deactivated">
    
    <Window.Resources>
        <!-- 标签样式 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
        </Style>

        <!-- 下拉框样式 -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0,0,0"/>
        </Style>

        <!-- 下拉框项样式（左对齐，上下居中） -->
        <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- 颜色块样式（小正方形） -->
        <Style x:Key="ColorBlockStyle" TargetType="Border">
            <Setter Property="Width" Value="23"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        
        <!-- 颜色标签样式 -->
        <Style x:Key="ColorLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11.5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="7,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 标题栏（可拖动） -->
        <Border Background="#2D2D30" 
                Height="30" 
                VerticalAlignment="Top"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock Text="圣经设置" 
                       Foreground="White" 
                       FontSize="13" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- 主内容区域 -->
        <StackPanel Margin="15,40,15,15">
            
            <!-- 译本 -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="译本" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="CmbBibleVersion" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="Setting_Changed">
                    <ComboBoxItem Content="和合本" IsSelected="True" Style="{StaticResource ComboBoxItemStyle}"/>
                </ComboBox>
            </Grid>

            <!-- 字体 -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="字体" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="CmbFontFamily" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="Setting_Changed"/>
            </Grid>

            <!-- 大小 -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="大小" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="CmbFontSize" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="Setting_Changed"
                          MouseWheel="ComboBox_MouseWheel">
                    <ComboBoxItem Content="30" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="32" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="34" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="36" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="38" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="40" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="42" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="44" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="46" IsSelected="True" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="48" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="50" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="52" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="54" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="56" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="58" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="60" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="64" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="68" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="72" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="76" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="80" Style="{StaticResource ComboBoxItemStyle}"/>
                </ComboBox>
            </Grid>

            <!-- 边距 -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="边距" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="CmbMargin" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="Setting_Changed">
                    <ComboBoxItem Content="5" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="10" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="15" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="20" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="25" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="30" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="35" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="40" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="45" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="50" IsSelected="True" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="60" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="70" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="80" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="90" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="100" Style="{StaticResource ComboBoxItemStyle}"/>
                </ComboBox>
            </Grid>

            <!-- 节距（节与节之间的间距） -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="节距" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="CmbVerseSpacing" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="Setting_Changed">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="5" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="8" IsSelected="True" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="10" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="15" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="20" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="25" Style="{StaticResource ComboBoxItemStyle}"/>
                    <ComboBoxItem Content="30" Style="{StaticResource ComboBoxItemStyle}"/>
                </ComboBox>
            </Grid>

            <!-- 颜色设置（横向一行：背景 ■ 经文 ■ 标题 ■ 节号 ■ 选中 ■） -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="背景" Style="{StaticResource ColorLabelStyle}" Margin="0,0,5,0"/>
                <Border x:Name="BorderBackgroundColor" 
                        Style="{StaticResource ColorBlockStyle}"
                        Background="Black"
                        MouseLeftButtonDown="ColorButton_Click"/>
                
                <TextBlock Text="经文" Style="{StaticResource ColorLabelStyle}"/>
                <Border x:Name="BorderTextColor" 
                        Style="{StaticResource ColorBlockStyle}"
                        Background="White"
                        MouseLeftButtonDown="ColorButton_Click"/>
                
                <TextBlock Text="标题" Style="{StaticResource ColorLabelStyle}"/>
                <Border x:Name="BorderTitleColor" 
                        Style="{StaticResource ColorBlockStyle}"
                        Background="#FF5722"
                        MouseLeftButtonDown="ColorButton_Click"/>
                
                <TextBlock Text="节号" Style="{StaticResource ColorLabelStyle}"/>
                <Border x:Name="BorderVerseNumberColor" 
                        Style="{StaticResource ColorBlockStyle}"
                        Background="#FFC107"
                        MouseLeftButtonDown="ColorButton_Click"/>
                
                <TextBlock Text="选中" Style="{StaticResource ColorLabelStyle}"/>
                <Border x:Name="BorderHighlightColor" 
                        Style="{StaticResource ColorBlockStyle}"
                        Background="#FFFF00"
                        MouseLeftButtonDown="ColorButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>


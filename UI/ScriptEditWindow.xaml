<Window x:Class="ImageColorChanger.UI.ScriptEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="脚本编辑" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        Background="#f0f0f0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="关键帧时间脚本" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- TOTAL时间设置区域 -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="总时长:" 
                           FontSize="13"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" 
                         x:Name="TotalDurationTextBox"
                         Text="100"
                         FontSize="13"
                         Padding="5"
                         VerticalAlignment="Center"
                         Margin="0,0,5,0"/>

                <TextBlock Grid.Column="2" 
                           Text="秒" 
                           FontSize="13"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 说明文本 -->
        <TextBlock Grid.Row="2" 
                   x:Name="TotalInfoTextBlock"
                   Text="TOTAL时长用于控制合成播放速度" 
                   FontSize="11" 
                   Foreground="Gray"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <!-- 说明 -->
        <TextBlock Grid.Row="3" 
                   Text="格式: 帧序号 时间(秒) | 可以修改时间值并保存" 
                   FontSize="12" 
                   Foreground="Gray"
                   Margin="0,0,0,10"/>

        <!-- 保存按钮 -->
        <Button Grid.Row="4" 
                x:Name="BtnSave"
                Content="保存" 
                Width="100" 
                Height="30"
                FontSize="12"
                Background="#4CAF50"
                Foreground="White"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Click="BtnSave_Click"/>

        <!-- 文本编辑区 -->
        <TextBox Grid.Row="5" 
                 x:Name="ScriptTextBox"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="14"
                 Padding="5"
                 Background="White"/>
    </Grid>
</Window>


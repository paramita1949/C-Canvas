<Window x:Class="ImageColorChanger.UI.ScriptEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="脚本编辑" Height="300" Width="300"
        WindowStartupLocation="CenterOwner"
        Background="#f0f0f0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="关键帧时间脚本" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- 说明 -->
        <TextBlock Grid.Row="1" 
                   Text="格式: 帧序号 时间(秒) | 可以修改时间值并保存" 
                   FontSize="12" 
                   Foreground="Gray"
                   Margin="0,0,0,10"/>

        <!-- 保存按钮 -->
        <Button Grid.Row="2" 
                x:Name="BtnSave"
                Content="保存" 
                Width="100" 
                Height="30"
                FontSize="12"
                Background="#4CAF50"
                Foreground="White"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Click="BtnSave_Click"/>

        <!-- 文本编辑区 -->
        <TextBox Grid.Row="3" 
                 x:Name="ScriptTextBox"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="14"
                 Padding="5"
                 Background="White"/>
    </Grid>
</Window>


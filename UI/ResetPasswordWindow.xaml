<Window x:Class="ImageColorChanger.UI.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="重置密码" 
        Height="650" 
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Microsoft YaHei UI"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3" Color="#2196F3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 文本框样式 -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,0,12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,0,12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 0: 标题 -->
            <RowDefinition Height="20"/>    <!-- 1: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 2: 提示信息 -->
            <RowDefinition Height="25"/>    <!-- 3: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 4: 用户名标签 -->
            <RowDefinition Height="8"/>     <!-- 5: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 6: 用户名输入框 -->
            <RowDefinition Height="20"/>    <!-- 7: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 8: 邮箱标签 -->
            <RowDefinition Height="8"/>     <!-- 9: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 10: 邮箱输入框+发送按钮 -->
            <RowDefinition Height="20"/>    <!-- 11: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 12: 验证码标签 -->
            <RowDefinition Height="8"/>     <!-- 13: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 14: 验证码输入框 -->
            <RowDefinition Height="5"/>     <!-- 15: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 16: 验证码提示 -->
            <RowDefinition Height="20"/>    <!-- 17: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 18: 新密码标签 -->
            <RowDefinition Height="8"/>     <!-- 19: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 20: 新密码输入框 -->
            <RowDefinition Height="20"/>    <!-- 21: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 22: 状态信息 -->
            <RowDefinition Height="15"/>    <!-- 23: 间距 -->
            <RowDefinition Height="Auto"/>  <!-- 24: 按钮区域 -->
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="重置密码"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"/>

        <!-- 提示信息 -->
        <Border Grid.Row="2"
                Background="#E3F2FD"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10,8">
            <TextBlock TextWrapping="Wrap"
                       Foreground="#1565C0"
                       FontSize="12"
                       LineHeight="18">
                <Run Text="请输入您的用户名和注册邮箱，我们将发送验证码到您的邮箱。"/>
            </TextBlock>
        </Border>

        <!-- 用户名 -->
        <TextBlock Grid.Row="4" 
                   Text="用户名："
                   FontSize="14"
                   Foreground="#333333"/>
        <TextBox x:Name="UsernameTextBox" 
                 Grid.Row="6"
                 Style="{StaticResource InputBox}"
                 Height="40"
                 MaxLength="20"
                 TabIndex="1"
                 InputMethod.PreferredImeState="Off"
                 InputMethod.IsInputMethodEnabled="False"/>

        <!-- 邮箱 -->
        <TextBlock Grid.Row="8" 
                   Text="注册邮箱："
                   FontSize="14"
                   Foreground="#333333"/>
        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="EmailTextBox" 
                     Grid.Column="0"
                     Style="{StaticResource InputBox}"
                     Height="40"
                     TabIndex="2"/>
            <Button x:Name="SendCodeButton"
                    Grid.Column="2"
                    Content="发送验证码"
                    Style="{StaticResource PrimaryButton}"
                    Height="40"
                    Click="SendCodeButton_Click"
                    TabIndex="3"/>
        </Grid>

        <!-- 验证码 -->
        <TextBlock Grid.Row="12" 
                   Text="验证码："
                   FontSize="14"
                   Foreground="#333333"/>
        <TextBox x:Name="CodeTextBox" 
                 Grid.Row="14"
                 Style="{StaticResource InputBox}"
                 Height="40"
                 MaxLength="6"
                 TabIndex="4"
                 InputMethod.PreferredImeState="Off"
                 InputMethod.IsInputMethodEnabled="False"/>
        <TextBlock Grid.Row="16"
                   Text="请输入邮箱中收到的6位验证码"
                   FontSize="11"
                   Foreground="#999999"/>

        <!-- 新密码 -->
        <TextBlock Grid.Row="18" 
                   Text="新密码："
                   FontSize="14"
                   Foreground="#333333"/>
        <PasswordBox x:Name="NewPasswordBox" 
                     Grid.Row="20"
                     Style="{StaticResource PasswordBox}"
                     Height="40"
                     TabIndex="5"/>

        <!-- 状态信息 -->
        <TextBlock x:Name="StatusText" 
                   Grid.Row="22"
                   TextWrapping="Wrap"
                   FontSize="12"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Visibility="Collapsed"/>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="24" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="ResetButton"
                    Content="重置密码"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Margin="0,0,15,0"
                    Click="ResetButton_Click"
                    TabIndex="6"/>
            <Button x:Name="CancelButton"
                    Content="取消"
                    Style="{StaticResource SecondaryButton}"
                    Width="120"
                    Click="CancelButton_Click"
                    TabIndex="7"/>
        </StackPanel>
    </Grid>
</Window>


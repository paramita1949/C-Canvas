<Window x:Class="ImageColorChanger.UI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="注册账号" 
        Height="600" 
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Microsoft YaHei UI"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 文本框样式 -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="注册新账号"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"/>

        <!-- 提示信息 -->
        <Border Grid.Row="2"
                Background="#FFF3CD"
                BorderBrush="#FFC107"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10,8">
            <TextBlock TextWrapping="Wrap"
                       Foreground="#856404"
                       FontSize="12"
                       LineHeight="18">
                <Run Text="注册后账号需要管理员激活才能使用。"/>
                <LineBreak/>
                <Run Text="请妥善保管您的账号密码。"/>
            </TextBlock>
        </Border>

        <!-- 用户名 -->
        <TextBlock Grid.Row="4" 
                   Text="用户名："
                   FontSize="14"
                   Foreground="#333333"/>
        <TextBox x:Name="UsernameTextBox" 
                 Grid.Row="6"
                 Style="{StaticResource InputBox}"
                 MaxLength="20"
                 TabIndex="1"
                 InputMethod.PreferredImeState="Off"
                 InputMethod.IsInputMethodEnabled="False"/>
        <TextBlock Grid.Row="8"
                   Text="3-20个字符，仅限字母、数字、下划线"
                   FontSize="11"
                   Foreground="#999999"/>

        <!-- 密码 -->
        <TextBlock Grid.Row="10" 
                   Text="密码："
                   FontSize="14"
                   Foreground="#333333"/>
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="12"
                     Style="{StaticResource PasswordBox}"
                     TabIndex="2"/>
        <TextBlock Grid.Row="14"
                   Text="至少6个字符"
                   FontSize="11"
                   Foreground="#999999"/>

        <!-- 邮箱（必填） -->
        <TextBlock Grid.Row="16" 
                   Text="邮箱："
                   FontSize="14"
                   Foreground="#333333"/>
        <TextBox x:Name="EmailTextBox" 
                 Grid.Row="18"
                 Style="{StaticResource InputBox}"
                 TabIndex="3"/>
        <TextBlock Grid.Row="19"
                   Text="用于密码找回，请填写真实邮箱"
                   FontSize="11"
                   Foreground="#999999"
                   Margin="0,3,0,0"/>

        <!-- 状态信息 -->
        <TextBlock x:Name="StatusText" 
                   Grid.Row="20"
                   TextWrapping="Wrap"
                   FontSize="12"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Visibility="Collapsed"/>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="22" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="RegisterButton"
                    Content="注册"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Margin="0,0,15,0"
                    Click="RegisterButton_Click"
                    TabIndex="4"/>
            <Button x:Name="CancelButton"
                    Content="取消"
                    Style="{StaticResource SecondaryButton}"
                    Width="120"
                    Click="CancelButton_Click"
                    TabIndex="5"/>
        </StackPanel>
    </Grid>
</Window>


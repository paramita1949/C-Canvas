<Window x:Class="ImageColorChanger.UI.WpfColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择颜色" 
        Height="350" 
        Width="300" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 颜色预览 -->
        <Border Grid.Row="0" Height="60" CornerRadius="4" Margin="0,0,0,15">
            <Border.Background>
                <SolidColorBrush x:Name="PreviewBrush" Color="White"/>
            </Border.Background>
        </Border>

        <!-- 颜色滑块 -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="红色 (R)" Foreground="White" Margin="0,0,0,5"/>
            <Slider x:Name="RedSlider" Minimum="0" Maximum="255" Value="255" 
                    ValueChanged="ColorSlider_ValueChanged" Margin="0,0,0,15"/>
            
            <TextBlock Text="绿色 (G)" Foreground="White" Margin="0,0,0,5"/>
            <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" Value="255" 
                    ValueChanged="ColorSlider_ValueChanged" Margin="0,0,0,15"/>
            
            <TextBlock Text="蓝色 (B)" Foreground="White" Margin="0,0,0,5"/>
            <Slider x:Name="BlueSlider" Minimum="0" Maximum="255" Value="255" 
                    ValueChanged="ColorSlider_ValueChanged" Margin="0,0,0,15"/>
        </StackPanel>

        <!-- RGB 值显示 -->
        <TextBlock Grid.Row="2" x:Name="RgbText" 
                   Text="RGB: 255, 255, 255" 
                   Foreground="White" 
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- 按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="确定" Width="80" Height="32" 
                    Background="#0078D4" Foreground="White" 
                    BorderThickness="0" Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button Content="取消" Width="80" Height="32" 
                    Background="#3E3E42" Foreground="White" 
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>


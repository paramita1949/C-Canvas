{
  "name": "cloudflare-auth-system",
  "version": "1.0.0",
  "description": "基于 Cloudflare Pages 的网络验证系统",
  "scripts": {
    "dev": "wrangler pages dev public --binding DB=DB",
    "deploy": "wrangler pages deploy public",
    "db:init": "wrangler d1 execute auth-db --file=./schema.sql --local",
    "db:prod": "wrangler d1 execute auth-db --file=./schema.sql"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}

